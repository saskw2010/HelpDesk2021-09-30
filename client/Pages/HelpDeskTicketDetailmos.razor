@page "/help-desk-ticket-detailmos"
@page "/help-desk-ticket-detailmos/{HelpDeskTicketId:int}"
@layout WidelayoutLayout
@inherits Testauth.Pages.HelpDeskTicketDetailmosComponent

@using Radzen
@using Radzen.Blazor
@using Testauth.Models.Authenticationconn
@using Testauth.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


@inject Microsoft.Extensions.Localization.IStringLocalizer<HelpDeskTicketDetailmos> L
<RadzenContent Container="main">
    <ChildContent>
        <RadzenHeading Size="H1" Text="@L["pageTitle.Text"]">
        </RadzenHeading>
        <div class="row">
            <div class="col-md-12">
                <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="@L["button0.Text"]" Click="@Button0Click">
                </RadzenButton>
                <RadzenTextBox ReadOnly="true" style="display: block; width: 877px" Name="Textbox0">
                </RadzenTextBox>
                <RadzenDataGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Count="@getHelpDeskTicketDetailsCount" Data="@getHelpDeskTicketDetailsResult" FilterMode="FilterMode.Advanced" TItem="Testauth.Models.Authenticationconn.HelpDeskTicketDetail" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
                    <Columns>
                        <RadzenDataGridColumn TItem="Testauth.Models.Authenticationconn.HelpDeskTicketDetail" Property="Id" Title="@L["grid0.Id.Title"]">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Testauth.Models.Authenticationconn.HelpDeskTicketDetail" FilterProperty="HelpDeskTicket.TicketGUID" Property="HelpDeskTicketId" SortProperty="HelpDeskTicket.TicketGUID" Title="@L["grid0.HelpDeskTicketId.Title"]">
                            <Template Context="data">
                                @(data.HelpDeskTicket?.TicketGUID)
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Testauth.Models.Authenticationconn.HelpDeskTicketDetail" FormatString="{0:d}" Property="TicketDetailDate" Title="@L["grid0.TicketDetailDate.Title"]">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Testauth.Models.Authenticationconn.HelpDeskTicketDetail" Property="TicketDescription" Title="@L["grid0.TicketDescription.Title"]">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Testauth.Models.Authenticationconn.HelpDeskTicketDetail" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
                            <Template Context="testauthModelsAuthenticationconnHelpDeskTicketDetail">
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, testauthModelsAuthenticationconnHelpDeskTicketDetail))" @onclick:stopPropagation="true">
                                </RadzenButton>
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </div>
        </div>
    </ChildContent>
</RadzenContent>
